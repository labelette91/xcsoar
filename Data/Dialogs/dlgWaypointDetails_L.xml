<?xml version="1.0"?>

<Form Caption="Waypoint Info">
  <Button Name="cmdGoto" Caption="GoTo" Width="70" Height="35" OnClick="OnGotoClicked" />

  <SymbolButton Name="cmdPrev" Caption="&lt;" Y="-70" Width="35" Height="35" OnClick="OnPrevClicked" />
  <SymbolButton Name="cmdNext" Caption="&gt;" X="35" Y="-70" Width="35" Height="35" OnClick="OnNextClicked" />

  <Button Name="cmdClose" Caption="Close" Y="-35" Width="70" Height="35" OnClick="OnCloseClicked" />

  <Panel Name="frmInfos" X="70" Y="0">
    <Edit Name="prpWpComment" Caption="Comment" Height="40" CaptionWidth="88" ReadOnly="1" MultiLine="1" />
    <Edit Name="Radio" Caption="Radio frequency" Height="20" CaptionWidth="88" ReadOnly="1" />
    <Edit Name="Runway" Caption="Runway" Height="20" CaptionWidth="88" ReadOnly="1" />
    <Edit Name="Location" Caption="Location" Height="20" CaptionWidth="88" ReadOnly="1" />
    <Edit Name="prpAltitude" Caption="Elevation" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpSunset" Caption="Sunset" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="BearingDistance" Caption="Bearing and Distance" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpMc0" Caption="Alt. diff. MC 0" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpMc1" Caption="Alt. diff. MC safety" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpMc2" Caption="Alt. diff. MC current" Height="20" CaptionWidth="138" ReadOnly="1" />
  </Panel>

  <TextEdit Name="frmDetails" X="70" Y="0" ReadOnly="1" MultiLine="1" />

  <Panel Name="frmCommands" X="70" Y="0" Visible="0">
    <Button Name="cmdReplace" Caption="Replace In Task" X="40" Y="10" Width="-50" Height="30" OnClick="OnReplaceClicked" />
    <Button Name="cmdInserInTask" Caption="Insert In Task" X="40" Width="-50" Height="30" OnClick="OnInsertInTaskClicked" />
    <Button Name="cmdAppendInTask" Caption="Append To Task" X="40" Width="-50" Height="30" OnClick="OnAppendInTaskClicked" />
    <Button Name="cmdRemoveFromTask" Caption="Remove From Task" X="40" Width="-50" Height="30" OnClick="OnRemoveFromTaskClicked" />
    <Button Name="cmdNewHome" Caption="Set As New Home" X="40" Width="-50" Height="30" OnClick="OnNewHomeClicked" />
    <Button Name="cmdActivatePan" Caption="Pan To Waypoint" X="40" Width="-50" Height="30" OnClick="OnActivatePanClicked" />
  </Panel>
</Form>
