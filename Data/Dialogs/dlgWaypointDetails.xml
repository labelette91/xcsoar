<?xml version="1.0"?>

<Form Caption="Waypoint Info">
  <SymbolButton Name="cmdPrev" Caption="&lt;" Y="-35" Width="40" Height="35" OnClick="OnPrevClicked" />
  <SymbolButton Name="cmdNext" Caption="&gt;" X="40" Y="-35" Width="40" Height="35" OnClick="OnNextClicked" />
  
  <Button Name="cmdGoto" Caption="GoTo" X="80" Y="-35" Width="-80" Height="35" OnClick="OnGotoClicked" />

  <Button Name="cmdClose" Caption="Close" X="-80" Y="-35" Height="35" OnClick="OnCloseClicked" />

  <Panel Name="frmInfos" Y="0" Height="-35">
    <Edit Name="prpWpComment" Caption="Comment" Height="40" CaptionWidth="100" ReadOnly="1" MultiLine="1" />
    <Edit Name="Radio" Caption="Radio frequency" Height="22" CaptionWidth="100" ReadOnly="1" />
    <Edit Name="Runway" Caption="Runway" Height="22" CaptionWidth="100" ReadOnly="1" />
    <Edit Name="Location" Caption="Location" Height="22" CaptionWidth="100" ReadOnly="1" />
    <Edit Name="prpAltitude" Caption="Elevation" Height="22" CaptionWidth="150" ReadOnly="1" />
    <Edit Name="prpSunset" Caption="Sunset" Height="22" CaptionWidth="150" ReadOnly="1" />
    <Edit Name="BearingDistance" Caption="Bearing and Distance" Height="22" CaptionWidth="150" ReadOnly="1" />
    <Edit Name="prpMc0" Caption="Alt. diff. MC 0" Height="22" CaptionWidth="150" ReadOnly="1" />
    <Edit Name="prpMc1" Caption="Alt. diff. MC safety" Height="22" CaptionWidth="150" ReadOnly="1" />
    <Edit Name="prpMc2" Caption="Alt. diff. MC current" Height="22" CaptionWidth="150" ReadOnly="1" />
  </Panel>

  <TextEdit Name="frmDetails" Y="0" Height="-35" ReadOnly="1" MultiLine="1" />

  <Panel Name="frmCommands" Y="0" Height="-35" Visible="0">
    <Button Name="cmdReplace" Caption="Replace In Task" X="40" Y="10" Width="-40" Height="30" OnClick="OnReplaceClicked" />
    <Button Name="cmdInserInTask" Caption="Insert In Task" X="40" Width="-40" Height="30" OnClick="OnInsertInTaskClicked" />
    <Button Name="cmdAppendInTask" Caption="Append To Task" X="40" Width="-40" Height="30" OnClick="OnAppendInTaskClicked" />
    <Button Name="cmdRemoveFromTask" Caption="Remove From Task" X="40" Width="-40" Height="30" OnClick="OnRemoveFromTaskClicked" />
    <Button Name="cmdNewHome" Caption="Set As New Home" X="40" Width="-40" Height="30" OnClick="OnNewHomeClicked" />
    <Button Name="cmdActivatePan" Caption="Pan To Waypoint" X="40" Width="-40" Height="30" OnClick="OnActivatePanClicked" />
  </Panel>
</Form>
